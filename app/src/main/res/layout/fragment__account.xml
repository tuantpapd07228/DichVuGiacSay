<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F1F1F1"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment_Account">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/orange"
            android:text="Tài khoản"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="10dp"
            android:background="@color/white"
            android:id="@+id/accInfo">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/student"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:id="@+id/accName"
                        android:text="tran thi truong nhi"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:id="@+id/accPhone"
                        android:text="0656412"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_navigate_next_24"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:id="@+id/accOrder"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lichsudathang"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Đơn hàng"
                android:gravity="start"
                android:layout_marginVertical="2dp"
                android:layout_marginLeft="10dp"

                android:textSize="18sp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_navigate_next_24"
                android:layout_gravity="right"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"

                android:weightSum="100"
                android:layout_height="30dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_language_24"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Ngôn ngữ"
                    android:gravity="start"
                    android:layout_marginVertical="2dp"
                    android:layout_marginLeft="10dp"

                    android:textSize="18sp"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_navigate_next_24"
                    android:layout_gravity="right"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"

                android:weightSum="100"
                android:layout_height="30dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_share_24"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Chia sẻ"
                    android:gravity="start"
                    android:layout_marginVertical="2dp"
                    android:layout_marginLeft="10dp"

                    android:textSize="18sp"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_navigate_next_24"
                    android:layout_gravity="right"/>

            </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/accChangPW"
            android:weightSum="100"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_key_24"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu"
                android:gravity="start"
                android:layout_marginVertical="2dp"
                android:layout_marginLeft="10dp"

                android:textSize="18sp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_navigate_next_24"
                android:layout_gravity="right"/>

        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/accLogout"
            android:weightSum="100"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_logout_24"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:gravity="start"
                android:layout_marginVertical="2dp"
                android:layout_marginLeft="10dp"

                android:textSize="18sp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_navigate_next_24"
                android:layout_gravity="right"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/accDelete"
                android:weightSum="100"
                android:layout_height="30dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_delete_24"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Xóa tài khoản"
                    android:gravity="start"
                    android:layout_marginVertical="2dp"
                    android:layout_marginLeft="10dp"

                    android:textSize="18sp"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_navigate_next_24"
                    android:layout_gravity="right"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>